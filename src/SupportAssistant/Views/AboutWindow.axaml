<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SupportAssistant.Views.AboutWindow"
        Title="About - SupportAssistant"
        Width="400" 
        Height="300"
        WindowStartupLocation="CenterOwner"
        Icon="/Assets/avalonia-logo.ico"
        CanResize="False">
    
    <Border Padding="30">
        <StackPanel Spacing="20" HorizontalAlignment="Center">
            
            <TextBlock Text="ðŸ¤–" FontSize="48" HorizontalAlignment="Center"/>
            
            <TextBlock Text="SupportAssistant" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center"/>
            
            <TextBlock Text="Version 1.0.0" 
                      FontSize="14" 
                      HorizontalAlignment="Center"
                      Foreground="Gray"/>
            
            <TextBlock Text="AI-powered technical support assistant" 
                      FontSize="14" 
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      MaxWidth="300"/>
            
            <TextBlock Text="Built with Avalonia UI and .NET 9" 
                      FontSize="12" 
                      HorizontalAlignment="Center"
                      Foreground="Gray"/>
            
            <Button Content="Close" 
                   HorizontalAlignment="Center"
                   Padding="20,8"
                   Click="CloseButton_Click"/>
            
        </StackPanel>
    </Border>
    
