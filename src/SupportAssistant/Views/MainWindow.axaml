<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SupportAssistant.ViewModels"
        xmlns:views="using:SupportAssistant.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="SupportAssistant.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SupportAssistant - Your AI Technical Assistant"
        MinWidth="600"
        MinHeight="400">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*">
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#1976D2">
            <MenuItem Header="_File" Foreground="White">
                <MenuItem Header="_Settings..." Command="{Binding OpenSettingsCommand}"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help" Foreground="White">
                <MenuItem Header="_About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Header -->
        <Border Grid.Row="1" 
                Background="#2196F3" 
                Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ¤–" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="SupportAssistant" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Your AI-powered technical support assistant" 
                              FontSize="12" 
                              Foreground="#E3F2FD"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content with Overlay -->
        <Grid Grid.Row="2">
            <!-- Chat Interface -->
            <views:ChatView DataContext="{Binding Chat}"/>
            
            <!-- Background Task Overlay -->
            <Border VerticalAlignment="Top" 
                    HorizontalAlignment="Center" 
                    Margin="20">
                <views:BackgroundTaskView DataContext="{Binding BackgroundTask}"/>
            </Border>
        </Grid>
        
    </Grid>

</Window>
